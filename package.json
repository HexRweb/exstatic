{
  "name": "@exstatic/core",
  "version": "0.0.1",
  "description": "HexR's Static Site Generator. Opinionated and SEO friendly",
  "main": "index.js",
  "repository": "https://github.com/hexrweb/exstatic",
  "author": "HexR <hello@hexr.org>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "^8.9.0 || ^10.12.0"
  },
  "dependencies": {
    "@hexr/hookit": "^0.1.1",
    "bluebird": "^3.5.2",
    "express-hbs": "^2.0.1",
    "fs-extra": "^7.0.0",
    "html-minifier": "^3.5.20",
    "js-yaml": "^3.12.0",
    "lodash.get": "^4.4.2",
    "marked": "^0.6.0",
    "node-translate": "^0.0.4",
    "slugify": "^1.3.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.6.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sinon": "^7.2.2",
    "xo": "^0.24.0"
  },
  "scripts": {
    "lint": "xo",
    "test:all": "yarn run test:unit && yarn run test:integration",
    "test:unit": "nyc --all --reporter=html --reporter=text mocha --recursive test/unit",
    "test:integration": "mocha --recursive test/integration"
  },
  "xo": {
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "prefer-object-spread": "off",
      "no-use-extend-native/no-use-extend-native": "off"
    },
    "ignore": [
      "lib/helpers/**/*"
    ],
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      }
    ]
  }
}
