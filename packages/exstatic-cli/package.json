{
  "name": "@exstatic/cli",
  "version": "0.0.1",
  "description": "Command Line Interface for Exstatic",
  "main": "lib/bootstrap.js",
  "repository": "https://github.com/hexrweb/exstatic-cli",
  "author": "HexR <hello@hexr.org>",
  "license": "MIT",
  "private": false,
  "files": [
    "bin",
    "lib",
    "yarn.lock"
  ],
  "bin": {
    "exstatic": "./bin/exstatic"
  },
  "scripts": {
    "lint": "xo"
  },
  "dependencies": {
    "exstatic-dev": "https://github.com/hexrweb/exstatic-dev.git",
    "yargs": "^12.0.5"
  },
  "devDependencies": {
    "xo": "^0.24.0"
  },
  "xo": {
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "prefer-object-spread": "off",
	  "no-use-extend-native/no-use-extend-native": "off",
	  "unicorn/no-process-exit": "off"
    }
  }
}
